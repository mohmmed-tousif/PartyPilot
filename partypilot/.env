PORT=3000
NODE_ENV=development

# This tells the app where MongoDB is running.
# Leave this EXACT if you're using MongoDB locally.
MONGO_URI=mongodb://127.0.0.1:27017/partypilot

# Secret used to sign login tokens — can be any long random string.
JWT_SECRET=mysuperlongsecretkeychangeit
JWT_EXPIRES_IN=2h

# For CORS (safe default when developing locally)
CORS_ORIGIN=http://localhost:3000

# Email system (we’re using a stub for now)
MAIL_FROM=no-reply@partypilot.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
